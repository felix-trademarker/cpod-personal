<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <title>ChinesePod In Person Online Classes</title>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Slab:300,400,600,700">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,600,700">
        <style>
            body{
                font-family: 'Roboto',sans-serif;
                font-size: 16px;
            }
            .wrap{
                max-width: 758px;
                width: 100%;
                background: #fff;
                margin: auto;
                box-shadow: 0px 0px 11px #d7d7d7;
                padding: 10px;
                height: 100%;
            }

            header{
                text-align: center;
                border-bottom: 2px solid #dd1d22;
                padding: 20px;
            }
            .footer{
              margin-top: 60px;
              text-align: center;
            }

            .table{
                border-collapse: collapse;
                width: 100%;
            }

            .table th, .table td{
                border: 1px solid #ccc;
                padding:10px;
                text-align: left;
            }
            .table td{
                font-weight: 300px;
            }
        </style>
    </head>
    <body>
        <div class="wrap">
            <header>
                <img style="width: 130px" src="https://chinesepod.com/personal/img/logo.jpg">
            </header>
            <div class="container">
                <div class="row">
                    <div class="col">
                    <h3>Hi Admin,</h3>
                    <p>A new order has been placed with Order# <b>(<%= orders.orderNo %>)</b> <span style="float:right;text-align: right;">Date of Purchased: <%= orders.createdAtFormated %></span></p>

                    <h3 style="margin-top:20px">Customer Information</h3>
                    <table class="table">
                    <tr>
                        <th>Customer Name</th>
                        <th>Customer Email</th>
                        <th>Username</th>
                        <th>Level</th>
                    </tr>
                    <tr>
                        <td><%= orders.customer.name %></td>
                        <td><%= orders.customer.email %></td>
                        <td><%= orders.customer.username %></td>
                        <td><%= orders.customer.level %></td>
                    </tr>
                    </table>

                    <h3 style="margin-top:20px">Below is the order details</h3>
                    <table class="table">
                    <tr>
                        <th>Customer Email</th>
                        <th>Description</th>
                        <th>Schedule</th>
                        <th>Amount(USD)</th>
                    </tr>
                    <tr>
                        <td><%= orders.customerEmail %></td>
                        <td><%= orders.description %></td>
                        <td>
                          Zone: <%= orders.timeZone %><br>
                          <% if( Array.isArray(orders.schedules.date) ) { %>
                            Schedules:
                            <ul class="list">
                            <% for(let i=0; i < orders.schedules.date.length; i++){  %>
                              <li><%= orders.schedules.date[i] %> - <%= orders.schedules.time[i] %></li>
                            <% } %>
                            </ul>
                          <% } else { %>
                            Schedules:
                            <ul class="list">
                                <li> <%= orders.schedules.date %> - <%= orders.schedules.time %></li>
                            </ul>
                          <% } %>
                        </td>
                        <td style="text-align:right; font-weight: 600;">$<%= orders.amount %></td>
                    </tr>
                    <tr>
                        <th colspan="3" style="text-align: right;">Total Amount</th>
                        <th style="text-align: right;">$299</th>
                    </tr>
                    </table>

                    
                    </div>
                </div>
            </div>
            

            <!--footer starts here-->
            <footer id="page-footer" class="footer">
                <div class="container-fluid">
                    <div class="row navbar navbar-light justify-content-between flex-row-reverse">
                    
                    <div class="col-xs-12 col-md-6 text-center">
                        <small class="copy">Copyright Â© 2022 ChinesePod LLC</small>
                        
                    </div>

                    </div>
                </div>
            </footer>
        </div>
    </body>
</html>
